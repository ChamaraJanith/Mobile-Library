<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    android:padding="16dp"
    tools:context=".DiscoverClubsActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Discover Book Clubs"
        android:textSize="22sp"
        android:textColor="#212529"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="8dp" />

    <EditText
        android:id="@+id/etSearchBooks"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Search for book clubs..."
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/etSearchBooks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sample Book Club Card 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#F8F9FA"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:layout_marginEnd="16dp"
                        android:scaleType="centerCrop"
                        android:background="#6C757D"
                        android:contentDescription="Book cover placeholder" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fantasy Readers United"
                            android:textSize="18sp"
                            android:textColor="#212529"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Currently Reading: The Hobbit"
                            android:textSize="14sp"
                            android:textColor="#6C757D"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="142 members"
                            android:textSize="12sp"
                            android:textColor="#6C757D"
                            android:layout_marginTop="4dp" />

                        <Button
                            android:id="@+id/btnJoinClub1"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Join Club"
                            android:backgroundTint="#E67E22"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:layout_marginTop="12dp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sample Book Club Card 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#F8F9FA"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:layout_marginEnd="16dp"
                        android:scaleType="centerCrop"
                        android:background="#6C757D"
                        android:contentDescription="Book cover placeholder" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mystery Book Club"
                            android:textSize="18sp"
                            android:textColor="#212529"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Currently Reading: Agatha Christie"
                            android:textSize="14sp"
                            android:textColor="#6C757D"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="89 members"
                            android:textSize="12sp"
                            android:textColor="#6C757D"
                            android:layout_marginTop="4dp" />

                        <Button
                            android:id="@+id/btnJoinClub2"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Join Club"
                            android:backgroundTint="#E67E22"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:layout_marginTop="12dp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sample Book Club Card 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#F8F9FA"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:layout_marginEnd="16dp"
                        android:scaleType="centerCrop"
                        android:background="#6C757D"
                        android:contentDescription="Book cover placeholder" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Classic Literature Society"
                            android:textSize="18sp"
                            android:textColor="#212529"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Currently Reading: Pride and Prejudice"
                            android:textSize="14sp"
                            android:textColor="#6C757D"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="256 members"
                            android:textSize="12sp"
                            android:textColor="#6C757D"
                            android:layout_marginTop="4dp" />

                        <Button
                            android:id="@+id/btnJoinClub3"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Join Club"
                            android:backgroundTint="#E67E22"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:layout_marginTop="12dp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
